<h2> Here are <%= @stylist.name() %>'s clients</h2>


<%  if @stylist.clients().any?() %>
  <ul>
    <% @stylist.clients().each() do |client| %>
    <li><%= client.name() %>.</li>
    <% end %>
  </ul>
<% else %>
  <p>This stylist doesn't appear to have any clients!</p>
<% end %>
<hr>

<% if @clients.any?() %>
<h4>Add a client</h4>

<form action="/stylist/<%= @stylist.id() %>" method="post">
  <input type ="hidden" name = "_method" value="patch">

  <label for="client_id">Select a Client</label>
  <select id='client_id' name='client_id' type='text'>
    <% @clients.each() do |client| %>
    <option value="<%= client.id()%>"> <%= client.name() %> </option>
    <% end %>
  </select>

  <button type = "submit"> Add </button>
</form>
<% end %>
<br>

<h4>Change <%= @stylist.name() %>'s name.</h4>
<form action="/stylist_edit/<%= @stylist.id() %>" method="post">
  <input type ="hidden" name = "_method" value="patch">
  <label for="name">Change name</label>
  <input id="name" name="name" type="text">

  <button type = "submit">Change</button>
</form>


<form action ="/stylist_delete/<%= @stylist.id() %>" method="post">
  <input name ="_method" type ="hidden" value="delete">
  <button type = "submit">Delete</button>
</form>

<br>
<a href="/">Back</a>
